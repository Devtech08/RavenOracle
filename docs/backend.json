
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Raven Oracle portal.",
      "properties": {
        "id": {
          "type": "string"
        },
        "callsign": {
          "type": "string"
        },
        "faceData": {
          "type": "string",
          "description": "Base64 encoded facial capture data."
        },
        "registrationDate": {
          "type": "string",
          "format": "date-time"
        },
        "isAdmin": {
          "type": "boolean"
        },
        "isBlocked": {
          "type": "boolean"
        }
      },
      "required": [
        "id",
        "callsign",
        "registrationDate",
        "isAdmin",
        "isBlocked"
      ]
    },
    "SessionRequest": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "SessionRequest",
      "type": "object",
      "description": "A request for a unique session key to access the portal.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "callsign": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected"] },
        "sessionCode": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "userId", "callsign", "status", "timestamp"]
    },
    "CallsignRequest": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CallsignRequest",
      "type": "object",
      "description": "Represents a request to change a user's callsign.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "currentCallsign": { "type": "string" },
        "requestedCallsign": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected"] },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "userId", "currentCallsign", "requestedCallsign", "status", "timestamp"]
    },
    "MessageLog": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "MessageLog",
      "type": "object",
      "description": "A secure log of all communications within the portal.",
      "properties": {
        "id": { "type": "string" },
        "sender": { "type": "string" },
        "userId": { "type": "string" },
        "content": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["sender", "userId", "content", "timestamp"]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/User"
      },
      "description": "User profiles including biometric data."
    },
    "/sessionRequests/{requestId}": {
      "schema": {
        "$ref": "#/backend/entities/SessionRequest"
      },
      "description": "Pending access requests requiring admin approval."
    },
    "/callsignRequests/{requestId}": {
      "schema": {
        "$ref": "#/backend/entities/CallsignRequest"
      },
      "description": "Pending callsign change requests."
    },
    "/messageLogs/{messageId}": {
      "schema": {
        "$ref": "#/backend/entities/MessageLog"
      },
      "description": "Archived communication logs."
    }
  }
}
