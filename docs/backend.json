
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Raven Oracle portal.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user entity."
        },
        "callsign": {
          "type": "string",
          "description": "The user's callsign for identification within the portal."
        },
        "registrationDate": {
          "type": "string",
          "description": "The date and time when the user registered.",
          "format": "date-time"
        },
        "isAdmin": {
          "type": "boolean",
          "description": "Indicates whether the user has administrator privileges."
        },
        "isBlocked": {
          "type": "boolean",
          "description": "Indicates whether the user is blocked from accessing the portal."
        }
      },
      "required": [
        "id",
        "callsign",
        "registrationDate",
        "isAdmin",
        "isBlocked"
      ]
    },
    "CallsignRequest": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CallsignRequest",
      "type": "object",
      "description": "Represents a request to change a user's callsign.",
      "properties": {
        "id": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "currentCallsign": {
          "type": "string"
        },
        "requestedCallsign": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "approved", "rejected"]
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["id", "userId", "currentCallsign", "requestedCallsign", "status", "timestamp"]
    },
    "MessageLog": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "MessageLog",
      "type": "object",
      "description": "A secure log of all communications within the portal.",
      "properties": {
        "id": { "type": "string" },
        "sender": { "type": "string" },
        "userId": { "type": "string" },
        "content": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["sender", "userId", "content", "timestamp"]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/User"
      },
      "description": "User profiles."
    },
    "/callsignRequests/{requestId}": {
      "schema": {
        "$ref": "#/backend/entities/CallsignRequest"
      },
      "description": "Pending callsign change requests for admin approval."
    },
    "/messageLogs/{messageId}": {
      "schema": {
        "$ref": "#/backend/entities/MessageLog"
      },
      "description": "Archived communication logs accessible only to administrators."
    }
  }
}
