
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // System identifier for rule deployment: v1.5.0
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      // Only admins can update sensitive fields like isAdmin or isBlocked.
      // Owners can only update their own profile fields.
      allow update: if isAdmin() || (isOwner(userId) && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin', 'isBlocked'])
      );
      // Only administrators can remove a user from the registry.
      allow delete: if isAdmin();
    }

    match /gateway/{gatewayId} {
      allow get: if true;
      allow list, write: if isAdmin();
    }

    match /accessKeys/{accessKeyId} {
      allow get: if isSignedIn();
      allow list, create, delete: if isAdmin();
      allow update: if isSignedIn();
    }

    match /messageLogs/{messageLogId} {
      allow create: if isSignedIn();
      allow list, get: if isAdmin() || (isSignedIn() && (
        resource.data.recipient == "ALL" || 
        resource.data.userId == request.auth.uid ||
        resource.data.recipient == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.callsign
      ));
    }

    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
    }

    match /callsignRequests/{requestId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }

    match /sessionRequests/{requestId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
  }
}
