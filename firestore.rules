
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // System identifier for rule deployment: v1.7.0
    function isSignedIn() {
      return request.auth != null;
    }

    // Optimized Admin Check: Validates against roles_admin registry
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isOwner(userId);
      // Owners can update non-privileged fields; Admins can update all.
      allow update: if isAdmin() || (isOwner(userId) && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin', 'isBlocked'])
      );
      allow delete: if isAdmin();
    }

    match /gateway/{gatewayId} {
      allow get: if true;
      allow list, write: if isAdmin();
    }

    match /accessKeys/{accessKeyId} {
      allow get, list: if isSignedIn();
      allow create, delete: if isAdmin();
      allow update: if isSignedIn();
    }

    match /messageLogs/{messageId} {
      allow create: if isSignedIn();
      allow list, get: if isSignedIn();
    }

    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      // Allow users to request admin status or admins to manage it
      allow write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
    }

    match /callsignRequests/{requestId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }

    match /sessionRequests/{requestId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
  }
}
