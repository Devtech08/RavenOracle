
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if isAdmin() || isOwner(userId);
      allow delete: if isAdmin();
    }

    match /gateway/{gatewayId} {
      allow get: if true;
      allow list, write: if isAdmin();
    }

    match /accessKeys/{accessKeyId} {
      allow get: if isSignedIn();
      allow list, create, delete: if isAdmin();
      allow update: if isSignedIn();
    }

    match /messageLogs/{messageLogId} {
      allow get, list: if isAdmin();
      allow create: if isSignedIn();
    }

    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      // Allow a user to write their own admin status to allow for initial bootstrap/setup
      allow write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
    }

    match /callsignRequests/{requestId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }

    match /sessionRequests/{requestId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
  }
}
